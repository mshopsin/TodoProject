<%= form_for(@item) do |f| %>

  <%= f.collection_select :project_id, Project.all, :id, :title %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description %>
  <br>


    <%= f.label "Yes" %>
    <%= f.radio_button 'complete',1,
     :checked => ( @item.complete != 0 ) %>
     <br>
     <%= f.label "No" %>
     <%= f.radio_button 'complete',0,
      :checked => ( @item.complete == 0 ) %>

  <br>
  <%= f.submit %>

  <%= link_to "return to project", project_path(@item.project_id) %>
<% end %>

